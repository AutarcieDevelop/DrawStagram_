<% include partials/header.ejs %>
<html lang="fr">
<head>
<title>Edit Profile</title>
</head>
<body>
<div class="container">

        <% if (message) { %>
                <p class="text-center text-danger"><%= message %></p>
        <% } %>

        <% if (users) { %>

                <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                        <div class="form-row">
                                <div class="form-group col-md-4">

                                        <label for="first_name"> First Name : </label>
                                        <div> <%= users.first_name %> </div>
                                        <input type="text" class="form-control" name="first_name" id="first_name" placeholder="Nouveau prenom : " >
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="last_name"> Last Name: </label>
                                        <div><%= users.last_name %></div>
                                        <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Nouveau nom : " >
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="username"> Username : </label>
                                        <div><%= users.username %></div>
                                        <input type="text" class="form-control" name="username" id="username" placeholder="Nouvel username : " >
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="mail"> E-mail : </label>
                                        <div><%= users.email %></div>
                                        <input type="text" class="form-control" name="mail" id="mail" placeholder="Nouvel adresse e-mail : " >
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="last_login"> Last login : </label>
                                        <div> <%= users.last_login %> </div>
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="created_on"> Created on : </label>
                                        <div> <%= users.created_on %> </div>
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="password"> Nouveau mot de passe : </label>
                                        <input type="text" class="form-control" name="password" id="password" placeholder="Nouveau mot de passe : ">
                                </div>
                                <div class="form-group col-md-4">
                                        <label for="pass2"> Confirmer Mot de passe : </label>
                                        <input type="text" class="form-control" name="pass2" id="pass2" placeholder="Confirmer Nouveau mot de passe : ">
                                </div>
                        </div>

                        <button type="submit" class="btn btn-success float-right"> Mettre a jour les informations ! </button>
                </form>
        <% } else { %>
                <p class="text-center"> User Not Found. Go <a href="/inscription"> here </a> to add players . </p>
        <% } %>
</div>
</body>
</html>